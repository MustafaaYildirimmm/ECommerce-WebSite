@using ECommerce.Entity;
@model List<Brand>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Brand List</h2>
@Html.ActionLink("Create Brand","AddBrand")

<table class="table table-hover">
    <tr class="active">
        <th>
            BrandName:
        </th>
        <th>
            Photo:
        </th>
        <th>
            Description:
        </th>
        <th>Edit & Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.BrandName
            </td>
            <td>
                @item.Photo
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <a href="~/Admin/Brand/EditBrand/@item.BrandID" class="btn btn-success">Edit</a>
                <a href="~/Admin/Brand/Delete/@item.BrandID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
