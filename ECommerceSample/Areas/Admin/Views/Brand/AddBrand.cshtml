@using ECommerce.Entity
@model ECommerce.Entity.Brand
@{
    ViewBag.Title = "AddBrand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AddBrand", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-green" style="margin-top:50px;">
        <div class="panel-heading">
            <h3 class="text-center">
                Add Brand
            </h3>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.BrandName, "Brand Name:", htmlAttributes: new { @class = "control-label col-md-2 " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, "Description:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Photo, "Photo :", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="photoPath" id="photoPath" />
                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="submit" value="Create" class="btn btn-primary col-md-offset-2 col-xs-offset-5 btn-lg" />
            </div>
        </div>
        <div class="panel-footer">
            <h4 class="text-center"> Mustafa Yıldırım &copy; Tüm Haklari Saklidir</h4>
        </div>


    </div>
    @Html.ActionLink("Back To List", "List")

}