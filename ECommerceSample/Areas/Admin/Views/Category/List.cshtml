
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using ECommerce.Entity;
@model IEnumerable<Category>


<h2 class="text-center">Category List</h2>
@Html.ActionLink("Create Category","AddCategory")
<div class="alert-success">
    @ViewBag.Message
</div>
<table class="table table-hover">
    <tr class="active">
        <th>CategoryName:</th>
        <th>Description:</th>
        <th>Edit & Delete</th>
    </tr>

    @foreach (Category item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td class=" col-md-4">
                <a href="~/Admin/Category/EditCategory?id=@item.CategoryID" class="btn btn-success col-xs-6 col-md-4">Edit</a>
                @Html.ActionLink("Delete", "Delete", new { @id = item.CategoryID }, new { @class = "btn btn-danger col-xs-6 col-md-5" })
            </td>
        </tr>
    }
</table>


